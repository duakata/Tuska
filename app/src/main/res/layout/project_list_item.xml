<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/projectImage"
            android:layout_width="90dp"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:padding="4dp"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/orderNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/projectImage"
            android:layout_marginLeft="5dp"
            android:text="INV/WEB-DEV/2018/00000012"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastUpdateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderNumText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/projectImage"
            android:text="2018-05-01"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/statusProjectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastUpdateText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/projectImage"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Dibayar"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/picName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusProjectText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/projectImage"
            android:text="2018-05-01"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textSize="11dp" />


        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/orderNumText"
            android:layout_below="@+id/picName"
            android:layout_toRightOf="@id/projectImage">

            <TextView
                android:id="@+id/textTitleResi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:text="Project Attachment : "
                android:textSize="9dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/linkAttch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/projectImage"
            android:text="No Pesanan : "
            android:textColor="@color/colorGreen"

            android:textSize="9dp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>