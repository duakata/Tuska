<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/grey_border">


        <TextView
            android:id="@+id/fragCountPembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textViewTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="WishList Saya"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Daftar wishlist anda"
            android:textSize="9dp"
            android:layout_marginStart="55dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/grey_border">


        <TextView
            android:id="@+id/fragCountProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textViewTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Tagihan Saya"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Daftar tagihan anda"
            android:textSize="9dp"
            android:layout_marginStart="55dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/grey_border">


        <TextView
            android:id="@+id/fragCountTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textViewTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Transaksi Saya"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginStart="55dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Daftar transaksi anda"
            android:textSize="9dp"
            android:layout_marginStart="55dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>

</LinearLayout>