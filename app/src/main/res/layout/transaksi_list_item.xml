<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/transaksiImage"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="2dp"
            android:layout_marginTop="1dp"/>

        <TextView
            android:id="@+id/invoiceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:layout_toRightOf="@id/transaksiImage"
            android:text="INV/WEB-DEV/2018/00000012"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateProjectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/invoiceText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:textSize="10dp"
            android:layout_toRightOf="@id/transaksiImage"
            android:text="2018-05-01"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/statusTransaksiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateProjectText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/transaksiImage"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Dibayar"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/statusPembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusTransaksiText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:textSize="10dp"
            android:layout_toRightOf="@id/transaksiImage"
            android:text="2018-05-01"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/invoiceText"
            android:layout_below="@+id/statusPembayaran">

            <TextView
                android:id="@+id/textTitleResi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:text="No Pesanan : "
                android:textSize="9dp" />

            <TextView
                android:id="@+id/orderidText"
                android:layout_toRightOf="@+id/textTitleResi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="No Pesanan : "
                android:textSize="9dp"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"/>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>